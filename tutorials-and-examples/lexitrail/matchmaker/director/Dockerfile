FROM golang:1.22

# Set destination for COPY
WORKDIR /app

# Download Go modules
COPY go.mod go.sum ./
RUN go mod download

# Copy source code into the image
COPY *.go ./

# Build
RUN CGO_ENABLED=0 GOOS=linux go build -o /app/director

# Run
CMD ["/app/director"]
